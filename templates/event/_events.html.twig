<div class="container d-flex justify-content-center mt-5">
    {% for event in events %}
        <div class="card" style="width: 18rem;">
            <div class="card-header">
                Événement
            </div>
            <div class="card-body">
                <h5 class="card-title">{{ event.name }}</h5>
                <p class="card-text">{{ event.description }}</p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">Date de l'événement : {{ event.date|date('d/m/Y H:i') }}</li>
                <li class="list-group-item">Résultat de l'événement : {{ event.result }}</li>
                <li class="list-group-item">Entités concernées :
                    <ul>
                        {% for entity in event.entities %}
                        <li>{{ entity.firstname }}</li>
                        {% endfor %}
                    </ul>
                </li>
            </ul>
            <div class="card-body">
                <a href="{{ path("app_event_show", {id:event.id}) }}" class="btn btn-success w-100 mt-2">Voir la fiche événement</a>
            </div>
        </div>
    {% endfor %}
</div>