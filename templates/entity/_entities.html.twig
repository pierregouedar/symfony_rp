<div class="d-flex justify-content-center mt-3">
    {% for entity in entities %}
    <div class="card m-3" style="width: 18rem;">
        {% set image = entity.picture.picture|default(null) %}
        <img class="card-img-top" src="{{ image ?? asset('/img/default.png') }}" alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title">Entité : {{ entity.firstname }} {{ entity.lastname }}</h5>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Utilisateur : {{ entity.user.username }}</li>
            <li class="list-group-item">PV Actuels : {{ entity.hp }}</li>
        </ul>
        <div class="card-body">
            <a href="{{ path('app_entity_show', {id:entity.id}) }}" class="btn btn-success w-100">Voir la fiche de l'entité</a>
            <a href="{{ path('app_entity_update', {id:entity.id}) }}" class="btn btn-warning w-100 mt-2">Modifier l'entité</a>
        </div>
    </div>
    {% endfor %}
</div>